        android:textColor="@color/color_button"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="@+id/lettreJ"
        app:layout_constraintEnd_toStartOf="@+id/lettreJ"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lettreG" />

    <TextView
        android:id="@+id/lettreG"
        android:layout_width="36dp"
        android:layout_height="40dp"

        android:background="@drawable/shape_button"
        android:gravity="center"
        android:text="G"
        android:textColor="@color/color_button"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="@+id/lettreH"
        app:layout_constraintEnd_toStartOf="@+id/lettreH"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lettreF" />

    <TextView
        android:id="@+id/lettreF"
        android:layout_width="36dp"
        android:layout_height="40dp"

        android:background="@drawable/shape_button"
        android:gravity="center"
        android:text="F"
        android:textColor="@color/color_button"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="@+id/lettreG"
        app:layout_constraintEnd_toStartOf="@+id/lettreG"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lettreD" />

    <TextView
        android:id="@+id/lettreD"
        android:layout_width="36dp"
        android:layout_height="40dp"

        android:background="@drawable/shape_button"
        android:gravity="center"
        android:text="D"
        android:textColor="@color/color_button"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="@+id/lettreF"
        app:layout_constraintEnd_toStartOf="@+id/lettreF"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lettreS" />

    <TextView
        android:id="@+id/lettreK"
        android:layout_width="36dp"
        android:layout_height="40dp"

        android:background="@drawable/shape_button"
        android:gravity="center"
        android:text="K"
        android:textColor="@color/color_button"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="@+id/lettreL"
        app:layout_constraintEnd_toStartOf="@+id/lettreL"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lettreJ" />

    <TextView
        android:id="@+id/lettreL"
        android:layout_width="36dp"
        android:layout_height="40dp"

        android:background="@drawable/shape_button"
        android:gravity="center"
        android:text="L"
        android:textColor="@color/color_button"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="@+id/lettreM"
        app:layout_constraintEnd_toStartOf="@+id/lettreM"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lettreK" />

    <TextView
        android:id="@+id/lettreN"
        android:layout_width="36dp"
        android:layout_height="40dp"

        android:background="@drawable/shape_button"
        android:gravity="center"
        android:text="N"
        android:textColor="@color/color_button"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="@+id/backspacebtn"
        app:layout_constraintEnd_toStartOf="@+id/backspacebtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lettreB" />

    <TextView
        android:id="@+id/lettreB"
        android:layout_width="36dp"
        android:layout_height="40dp"

        android:background="@drawable/shape_button"
        android:gravity="center"
        android:text="B"
        android:textColor="@color/color_button"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="@+id/lettreN"
        app:layout_constraintEnd_toStartOf="@+id/lettreN"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lettreV" />

    <TextView
        android:id="@+id/lettreV"
        android:layout_width="36dp"
        android:layout_height="40dp"

        android:background="@drawable/shape_button"
        android:gravity="center"
        android:text="V"
        android:textColor="@color/color_button"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="@+id/lettreB"
        app:layout_constraintEnd_toStartOf="@+id/lettreB"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lettreC" />

    <TextView
        android:id="@+id/lettreC"
        android:layout_width="36dp"
        android:layout_height="40dp"

        android:background="@drawable/shape_button"
        android:gravity="center"
        android:text="C"
        android:textColor="@color/color_button"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="@+id/lettreV"
        app:layout_constraintEnd_toStartOf="@+id/lettreV"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lettreX" />

    <TextView
        android:id="@+id/lettreX"
        android:layout_width="36dp"
        android:layout_height="40dp"

        android:background="@drawable/shape_button"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/color_button"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="@+id/lettreC"
        app:layout_constraintEnd_toStartOf="@+id/lettreC"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lettreW" />

    <TextView
        android:id="@+id/lettreW"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"

        android:background="@drawable/shape_button"
        android:gravity="center"
        android:text="W"
        android:textColor="@color/color_button"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="@+id/lettreX"
        app:layout_constraintEnd_toStartOf="@+id/lettreX"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lettreM"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_button"
        android:gravity="center"
        android:text="M"
        android:textColor="@color/color_button"
        android:textSize="27sp"
        app:layout_constraintBottom_toTopOf="@+id/backspacebtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lettreL" />

    <ImageView
        android:id="@+id/backspacebtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"

        android:background="@drawable/shape_button"
        android:src="@drawable/ic_backspace"
        app:layout_constraintBottom_toTopOf="@+id/searchbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lettreN" />

    <Button
        android:id="@+id/spacebar"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:tint="@color/color_button"
        android:background="@drawable/shape_button"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/searchbtn"
        app:layout_constraintStart_toEndOf="@+id/risibankbtn" />

    <ImageView
        android:id="@+id/deletebtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@+id/input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/input" />

    <EditText
        android:id="@+id/input"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_button_dark"
        android:inputType="text"
        android:padding="8dp"
        android:singleLine="true"
        android:textColor="@color/color_button"
        app:layout_constraintBottom_toTopOf="@+id/lettreP"
        app:layout_constraintEnd_toStartOf="@+id/deletebtn"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/risibankbtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/risibank_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tipText"
        android:text="Entrez un ou plusieurs mots clÃ©s"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="@color/color_button"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/recycler"
        app:layout_constraintBottom_toBottomOf="@+id/recycler" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@android:color/white"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/recycler"
        app:layout_constraintBottom_toBottomOf="@+id/recycler" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingBottom="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/input" />

    <ImageView
        android:id="@+id/searchbtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:padding="4dp"
        android:src="@drawable/ic_search"
        android:tint="@color/color_button"
        android:background="@drawable/shape_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
